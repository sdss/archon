{
  "type": "object",
  "properties": {
    "system": {
      "type": "object",
      "properties": {
        "controller": { "type": "string" }
      },
      "additionalProperties": true,
      "required": ["controller"]
    },
    "status": {
      "$ref": "#/properties/system"
    },
    "frame": {
      "type": "object",
      "properties": {
        "controller": { "type": "string" }
      },
      "patternProperties": {
        "^(?!controller).+$": { "type": "integer" }
      },
      "additionalProperties": false,
      "required": ["controller"]
    },
    "config": {
      "type": "object",
      "properties": {
        "controller": { "type": "string" },
        "config": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProps": false,
      "required": ["controller", "config"]
    },
    "controller_message": {
      "type": "object",
      "properties": {
        "controller": { "type": "string" },
        "text": { "type": "string" }
      },
      "additionalProperties": false,
      "required": ["controller", "text"]
    },
    "controller_log": {
      "type": "object",
      "properties": {
        "controller": { "type": "string" },
        "log": { "type": "string" }
      },
      "additionalProperties": false,
      "required": ["controller", "log"]
    },
    "raw_reply": {
      "type": "object",
      "properties": {
        "controller": { "type": "string" },
        "command": { "type": "string" },
        "response": { "type": "string" }
      },
      "additionalProperties": false,
      "required": ["controller", "command", "response"]
    }
  },
  "additionalProperties": false
}
